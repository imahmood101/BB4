{
  "name": "sales-dashboard",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && pnpm dev",
    "dev:backend": "cd backend && pnpm dev",
    "build": "concurrently \"npm run build:frontend\" \"npm run build:backend\"",
    "build:frontend": "cd frontend && pnpm build",
    "build:backend": "cd backend && pnpm build",
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "start:frontend": "cd frontend && pnpm preview",
    "start:backend": "cd backend && pnpm start",
    "lint": "concurrently \"npm run lint:frontend\" \"npm run lint:backend\"",
    "lint:frontend": "cd frontend && pnpm lint",
    "lint:backend": "cd backend && pnpm lint",
    "format": "concurrently \"npm run format:frontend\" \"npm run format:backend\"",
    "format:frontend": "cd frontend && pnpm format",
    "format:backend": "cd backend && pnpm format",
    "type-check": "concurrently \"npm run type-check:frontend\" \"npm run type-check:backend\"",
    "type-check:frontend": "cd frontend && pnpm type-check",
    "type-check:backend": "cd backend && pnpm type-check"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
} 